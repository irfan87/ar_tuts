<h1><%= @link.title %></h1>
<p><%= @link.url_address %></p>
<p>
	Posted by <%= @link.user.email %>
	at <%= time_ago_in_words(@link.created_at) %>
</p>
<% if (user_signed_in? && (current_user.id == @link.user_id)) %>
<%= link_to 'Edit this link', edit_link_path(@link) %>
<% else %>
<p>Only this author can update and delete this post</p>
<% end %>
<%= link_to 'Back', root_path %>